<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--FrameLayout-->
    <FrameLayout
        android:id="@+id/fl_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <!--RadioGroup-->
    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioButton
            android:id="@+id/rb_local_video"
            style="@style/bottom_style_tab"
            android:drawableTop="@drawable/main_drawable_selector"
            android:text="首页"
            />
        <RadioButton
            android:id="@+id/rb_local_audio"
            style="@style/bottom_style_tab"
            android:drawableTop="@drawable/girl_drawable_selector"
            android:text="美女" />

        <RadioButton
            android:id="@+id/rb_net_video"
            style="@style/bottom_style_tab"
            android:drawableTop="@drawable/audio_drawable_selector"
            android:text="视频" />

        <RadioButton
            android:id="@+id/rb_net_audio"
            style="@style/bottom_style_tab"
            android:drawableTop="@drawable/guanzhe_drawable_selector"
            android:text="关注"
            />
    </RadioGroup>
</LinearLayout>
